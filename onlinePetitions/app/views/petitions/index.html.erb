  <% if params[:my] %>
    <h1>Мои Петиции</h1>
  <% else %>
    <h1>Последние петиции</h1>
  <% end %>
  <table class="table" align="center">
    <tr>
      <th>Петиция</th>
      <th>Автор</th>
    </tr>
      <% @petitions.each do |petition| %>
          <tr>
            <td><%= link_to petition.title, petition %></td>
            <td><%= petition.user.first_name %>&nbsp;<%= petition.user.last_name %></td>
          </tr>
      <% end %>
  </table>